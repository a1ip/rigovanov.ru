doctype html
if lang
  html(lang='#{lang}')
else
  html(lang='ru')
    head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      if author
        meta(name='author', content='#{author}')
      else
        meta(name='author', content='#{owner.name}')
      block head
      block title
        title= title ? title + " | " + blog.title : blog.title
      block styles
    body
      block body
        #layout-main
          block main
